<% layout("/layouts/boilerplate") -%>

    <% if(allListing.length > 0) {%>
        <h3 class="mt-2">
            <%= allListing[0].category %> :
        </h3>
        <% } %>

            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1 mt-4">
                <% for(const listing of allListing) { %>
                    <a href="/listings/<%= listing.id %>" class="listing-link">
                        <div class="card listing-card">
                            <img src="<%= listing.image.url %>" class="card-img-top" style="height: 19rem"
                                alt="listing image">
                            <div class="card-body">
                                <div class="card-img-overlay"></div>
                                <h5 class="card-title">
                                    <%= listing.title %>
                                </h5>
                                <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %> / night</p>
                            </div>
                        </div>
                    </a>
                    <% } %>
            </div>