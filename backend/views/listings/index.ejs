<% layout("/layouts/boilerplate") -%>

    <div id="filters">
        <a href="/filters/Hostels">
            <div class="filter">
                <i class="fa-solid fa-hotel"></i>
                <span>Hostels</span>
            </div>
        </a>
        <a href="/filters/Rooms">
            <div class="filter">
                <i class="fa-solid fa-bed"></i>
                <span>Rooms</span>
            </div>
        </a>
        <a href="/filters/PGs">
            <div class="filter">
                <i class="fa-solid fa-building-user"></i>
                <span>PGs</span>
            </div>
        </a>
        <a href="/filters/Shared Flats">
            <div class="filter">
                <i class="fa-solid fa-arrow-right-to-city"></i>
                <span>Shared Flats</span>
            </div>
        </a>
        <a href="/filters/Studio Apartments">
            <div class="filter">
                <i class="fa-solid fa-building"></i>
                <span>Apartments</span>
            </div>
        </a>
        <a href="/filters/Cheap Rent">
            <div class="filter">
                <i class="fa-solid fa-house"></i>
                <span>Cheap Rent</span>
            </div>
        </a>
        <a href="/filters/Iconic Cities">
            <div class="filter">
                <i class="fa-solid fa-mountain-city"></i>
                <span>Iconic Cities</span>
            </div>
        </a>
        <a href="/filters/Luxury Villas">
            <div class="filter">
                <i class="fa-regular fa-snowflake"></i>
                <span>Luxury Villas</span>
            </div>
        </a>
        <a href="/filters/House">
            <div class="filter">
                <i class="fa-solid fa-shop-lock"></i>
                <span>House</span>
            </div>
        </a>
        <a href="/filters/Penthouses">
            <div class="filter">
                <i class="fa-solid fa-crown"></i>
                <span>Penthouses</span>
            </div>
        </a>
    </div>


    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1">
        <% for(const listing of allListing) { %>
            <a href="/listings/<%= listing.id %>" class="listing-link">
                <div class="card listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" style="height: 19rem" alt="listing image">
                    <div class="card-body">
                        <div class="card-img-overlay"></div>
                        <h5 class="card-title">
                            <%= listing.title %>
                        </h5>
                        <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %> / Month</p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>